{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "cli": {
    "packageManager": "npm",
    "analytics": "4e95068c-f941-44c4-b339-ca2fc9fdc8ad"
  },
  "newProjectRoot": "projects",
  "projects": {
    "komfort": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular/build:application",
          "options": {
            "outputPath": "dist/komfort",
            "baseHref": "/",
            "deployUrl": "/",
            "browser": "src/main.ts",
            "tsConfig": "tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              {
                "glob": "**/*",
                "input": "src/assets",
                "output": "/assets"
              },
              {
                "glob": "_redirects",
                "input": ".",
                "output": "."
              },
              {
                "glob": "_routes.json",
                "input": "",
                "output": "/"
              }
            ],
            "styles": [
              "src/styles.scss"
            ],
            "outputMode": "static",
            "index": {
              "input": "src/index.html",
              "output": "index.html"
            }
          },
          "configurations": {
            "production": {
              "outputPath": "dist/komfort",
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2mb",
                  "maximumError": "5mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "20kB",
                  "maximumError": "30kB"
                }
              ],
              "outputHashing": "all",
              "optimization": true,
              "sourceMap": false,
              "extractLicenses": true
            },
            "development": {
              "outputPath": "dist/komfort",
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular/build:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "komfort:build:production"
            },
            "development": {
              "buildTarget": "komfort:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "test": {
          "builder": "@angular/build:unit-test"
        }
      }
    }
  }
}